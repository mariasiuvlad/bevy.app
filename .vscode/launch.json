    "version": "0.2.0",
    "environment": [
        {"name":"PATH", "value":"%USERPROFILE%/.rustup/toolchains/nightly-x86_64-pc-windows-msvc/bin;${workspaceFolder}/target/debug/deps;%PATH%"}
    ],
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'bevygame'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=bevygame",
                    "--package=bevygame"
                ],
                "filter": {
                    "name": "bevygame",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'bevygame'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=bevygame",
                    "--package=bevygame"
                ],
                "filter": {
                    "name": "bevygame",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}